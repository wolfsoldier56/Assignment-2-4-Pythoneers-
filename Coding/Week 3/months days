months_30 = ('september', 'april', 'june', 'november')
months_31 = ('january', 'march', 'may', 'july', 'august', 'october', 'december')
months_28 = ('february',)

month = input("Enter a month: ").lower()
if month in months_30:
    print("This month has 30 days")
elif month in months_31:
    print("This month has 31 days")
elif month in months_28:
    print("This month has 28 days, except for leap years")
else:
    print("Invalid input, please try again") 


